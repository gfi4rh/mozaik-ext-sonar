.sonar__statistic
  &__container
    display flex 
    flex-direction column
    justify-content center

  &__line
    flex-grow 1
    margin 0.5vmin
    height 11vh
    min-height 11vh
    max-height 11vh
    display flex
    justify-content space-around

  &__stat
    width 15vmin
    overflow hidden
    cursor pointer

  &__stat:hover
    background-color #535c68
    border-radius 1em
  
  &__stat:active
    box-shadow 0 0.2em 0 rgba(0,0,0,0.4) inset
  
  &__stat:active
    box-shadow 0 0.2em 0 rgba(0,0,0,0.4) inset

  &__name
    text-align center

  &__content
    display flex
    justify-content center
    align-items last baseline
  
  &__value
    font-size 4vmin
    margin 2vmin 1vmin
  
  &__informations
    display flex
    flex-direction column-reverse

  &__evolution
    align-self end

  &__center
    display flex
    justify-content center
    align-items center
    height 100%
  
  &__error
    font-size 1.5em